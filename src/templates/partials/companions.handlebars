<div class="companions">
	<div class="companions__inner">
		<fieldset class="companions__fieldset">
			<legend class="companions__title">
				Количество попутчиков *
			</legend>
			<!-- Companions quantity -->
			<div class="companions__counter">
				<a class="companions__input companions__input--subtract" href="#"></a>
				<input
				class="companions__input companions__input--qty"
				type="text"
				name="companions"
				size="3"
				placeholder="2 чел"
				>
				<a class="companions__input companions__input--add" href="#"></a>
			</div>
			<!-- Companion details -->
			<div class="companions__details">
				<div class="companions__col">
					<span class="companions__label companions__label--num">№</span>
					<span class="companions__input companions__input--num">1</span>
				</div>
				<div class="companions__col">
					<label class="companions__label" for="companion-name-1">
						Имя: *
					</label>
					<input
					class="companions__input"
					type="text"
					name="companion-name-1"
					id="companion-name-1"
					placeholder="Введите ваше имя"
					required
					>
					<label class="companions__label" for="companion-nick-1">
						Прозвище:
					</label>
					<input
					class="companions__input"
					type="text"
					name="companion-nick-1"
					id="companion-nick-1"
					placeholder="Ну как же без этого!"
					>
				</div>
			</div>
			<!-- Companion details -->
			<div class="companions__details">
				<div class="companions__col">
					<span class="companions__label companions__label--num">№</span>
					<span class="companions__input companions__input--num">2</span>
				</div>
				<div class="companions__col">
					<label class="companions__label" for="companion-name-2">
						Имя: *
					</label>
					<input
					class="companions__input"
					type="text"
					name="companion-name-2"
					id="companion-name-2"
					placeholder="Введите ваше имя"
					required
					>
					<label class="companions__label" for="companion-nick-2">
						Прозвище:
					</label>
					<input
					class="companions__input"
					type="text"
					name="companion-nick-2"
					id="companion-nick-2"
					placeholder="Ну как же без этого!"
					>
				</div>
			</div>
		</fieldset>
	</div>
</div>